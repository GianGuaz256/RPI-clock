# Raspberry Pi Dashboard Environment Variables
# Copy this file to .env and fill in your actual values
# 
# IMPORTANT: Never commit the actual .env file to version control!
# The .env file should contain your real API keys and sensitive data.

# ============================================================================
# Weather Configuration (Required for weather screen)
# ============================================================================
# Get your free API key from: https://openweathermap.org/api
WEATHER_API_KEY=your_openweathermap_api_key_here

# City for weather data (format: "City,CountryCode" or "City")
WEATHER_CITY=London,UK

# Temperature units: "metric" (Celsius) or "imperial" (Fahrenheit)  
WEATHER_UNITS=metric

# ============================================================================
# Display Configuration
# ============================================================================
# Screen brightness (0-100)
DISPLAY_BRIGHTNESS=100

# Display timeout in seconds (0 = never timeout)
DISPLAY_TIMEOUT=0

# ============================================================================
# Google Calendar Configuration (Optional)
# ============================================================================
# Path to Google Calendar credentials file (download from Google Cloud Console)
GOOGLE_CALENDAR_CREDENTIALS_FILE=credentials.json

# Path to store the OAuth token (auto-generated after first authorization)
GOOGLE_CALENDAR_TOKEN_FILE=token.json

# OAuth scopes (usually don't need to change this)
GOOGLE_CALENDAR_SCOPES=https://www.googleapis.com/auth/calendar.readonly

# ============================================================================
# Application Configuration
# ============================================================================
# Update interval for API data in seconds (default: 300 = 5 minutes)
API_UPDATE_INTERVAL=300

# System stats update interval in seconds (default: 5)
SYSTEM_UPDATE_INTERVAL=5

# Touch swipe threshold in pixels (default: 100)
TOUCH_SWIPE_THRESHOLD=100

# Application frame rate (default: 30)
APP_FPS=30

# ============================================================================
# Development/Debug Configuration
# ============================================================================
# Enable debug logging (true/false)
DEBUG_MODE=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
